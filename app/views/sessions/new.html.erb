<div class="container">
  <h1> Login </h1>

  <%= flash.now[:error] %>
  <%= flash.now[:notice] %>

  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "Login" %>
  <% end %>
</div>
